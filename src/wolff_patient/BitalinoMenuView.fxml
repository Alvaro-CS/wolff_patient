<AnchorPane id="AnchorPane" maxWidth="500.0" prefHeight="244.0" prefWidth="500.0" style="-fx-background-color: #e3e4e5;" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="wolff_patient.BitalinoMenuController">
    
         <children>
      <Pane prefHeight="307.0" prefWidth="500.0">
         <children>
            <VBox prefHeight="302.0" prefWidth="500.0" spacing="20.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                              <ImageView fitHeight="81.0" fitWidth="89.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@images/heart.png" />
                                 </image>
                           <HBox.margin>
                              <Insets left="40.0" top="10.0" />
                           </HBox.margin>
                              </ImageView>
                              <Label text="Bitalino ECG ">
                                 <font>
                                    <Font name="Impact" size="26.0" />
                                 </font>
                           <HBox.margin>
                              <Insets left="60.0" top="40.0" />
                           </HBox.margin>
                              </Label>
                        <Button mnemonicParsing="false" onAction="#backToRecord" text="Go back">
                           <HBox.margin>
                              <Insets left="80.0" top="20.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox prefHeight="44.0" prefWidth="500.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#connectBitalino" prefHeight="35.0" prefWidth="200.0" text="Connect Bitalino">
                           <HBox.margin>
                              <Insets left="30.0" />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#disconnectBitalino" prefHeight="35.0" prefWidth="200.0" text="Close Bitalino">
                           <HBox.margin>
                              <Insets left="40.0" />
                           </HBox.margin>
                        </Button>
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <VBox prefHeight="76.0" prefWidth="250.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#readECG" prefHeight="35.0" prefWidth="233.0" text="Record automatic ECG">
                                 <VBox.margin>
                                    <Insets left="30.0" right="20.0" />
                                 </VBox.margin>
                              </Button>
                              <TextField fx:id="secondsLabel" promptText="How many seconds?">
                                 <VBox.margin>
                                    <Insets left="30.0" right="20.0" top="10.0" />
                                 </VBox.margin>
                              </TextField>
                           </children>
                        </VBox>
                        <VBox prefHeight="200.0" prefWidth="250.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#openManualECGoptions" prefHeight="35.0" prefWidth="200.0" text="Record manual ECG">
                                 <VBox.margin>
                                    <Insets left="20.0" />
                                 </VBox.margin>
                              </Button>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </Pane>
